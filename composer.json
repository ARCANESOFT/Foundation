{
    "name":        "arcanesoft/foundation",
    "description": "ARCANESOFT Foundation package.",
    "homepage":    "https://github.com/ARCANESOFT/Foundation",
    "keywords":    ["arcanedev", "arcanesoft", "laravel"],
    "authors":  [
        {
            "name":     "ARCANEDEV",
            "email":    "arcanedev.maroc@gmail.com",
            "homepage": "https://github.com/ARCANESOFT",
            "role":     "Developer"
        }
    ],
    "license": "MIT",
    "require": {
        "php":                    ">=7.0",
        "arcanedev/log-viewer":   "~4.4",
        "arcanedev/route-viewer": "~1.1",
        "arcanesoft/auth":        "~3.1",
        "arcanesoft/core":        "~2.7"
    },
    "require-dev": {
        "phpunit/phpunit": "~6.0",
        "phpunit/phpcov":  "~4.0"
    },
    "autoload": {
        "psr-4": {
            "Arcanesoft\\Foundation\\": "src/"
        },
        "files": ["helpers.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "Arcanesoft\\Foundation\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "testbench": "composer require --dev \"orchestra/testbench=~3.5\""
    }
}
