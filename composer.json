{
    "name":        "arcanesoft/foundation",
    "description": "ARCANESOFT Foundation package.",
    "homepage":    "https://github.com/ARCANESOFT/Foundation",
    "keywords":    ["arcanedev", "arcanesoft", "laravel"],
    "authors":  [
        {
            "name":     "ARCANEDEV",
            "email":    "arcanedev.maroc@gmail.com",
            "homepage": "https://github.com/ARCANESOFT",
            "role":     "Developer"
        }
    ],
    "license": "MIT",
    "require": {
        "php":                  ">=5.6.4",
        "arcanedev/log-viewer": "~3.0",
        "arcanesoft/core":      "~0.3",
        "arcanesoft/auth":      "~1.0"
    },
    "require-dev": {
        "phpunit/phpcov":       "~2.0|~3.0",
        "phpunit/phpunit":      "~4.0|~5.0"
    },
    "autoload": {
        "psr-4": {
            "Arcanesoft\\Foundation\\": "src/"
        },
        "files": ["helpers.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "Arcanesoft\\Foundation\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "testbench": "composer require --dev \"orchestra/testbench=~3.3.0\""
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
